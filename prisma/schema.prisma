generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// enum user role
enum UserRole {
  ADMIN
  USER
}

// Auth Users
model Users {
  id          String    @id @default(cuid())
  username    String
  email       String
  password    String
  role        UserRole
  is_active   Boolean   @default(true)
  lastLoginAt DateTime?
  token       String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  // relation
  orders Orders[]

  @@unique(email)
  @@unique(token)
  @@map("users")
}

// Orders
model Orders {
  id            String        @id @default(cuid())
  userId        String
  items         Json
  totalAmount   Float
  paymentMethod PaymentMethod
  paymentStatus PaymentStatus @default(pending)
  orderStatus   OrderStatus   @default(pending)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt()

  user Users @relation(fields: [userId], references: [id])

  @@map("orders")
}

enum PaymentMethod {
  stripe
  paypal
}

enum PaymentStatus {
  pending
  paid
  failed
}

enum OrderStatus {
  pending
  processing
  shipped
  delivered
}
